<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:vbcontrols="clr-namespace:gip.core.layoutenginewpf;assembly=gip.core.layoutenginewpf">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Shared.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- SimpleStyles: VBVisualGroup -->
    <Style  TargetType="{x:Type vbcontrols:VBVisualGroup}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type vbcontrols:VBVisualGroup}">
                    <DockPanel>
                    <Rectangle Stroke="#FF1E3A1E" Fill="#FF1E5A1E">
                    </Rectangle>
                        </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
